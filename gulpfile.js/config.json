{
    "root": {
        "src": "./src",
        "dest": "./dist"
    },

    "tasks": {
        "browserSync": {
            "server": {
                "baseDir": "dist"
            }
        },

        "static": {
            "src": "static",
            "dest": "./"
        },

        "js": {
            "src": "scripts",
            "dest": "scripts",
            "extractSharedJs": true,
            "entries": {
                "main": ["./main.js"]
            },
            "extensions": ["js"]
        },

        "css": {
            "src": "styles",
            "dest": "styles",
            "autoprefixer": {
                "browsers": ["last 3 version"]
            },
            "sass": {
                "indentedSyntax": false
            },
            "extensions": ["scss", "css"]
        },

        "html": {
            "src": "html",
            "dest": "./",
            "dataFile": "data/global.json",
            "htmlmin": {
                "collapseWhitespace": true
            },
            "extensions": ["html", "json"],
            "excludeFolders": ["layouts", "shared", "macros", "data"]
        },

        "images": {
            "src": "images",
            "dest": "images",
            "extensions": ["jpg", "png", "svg", "gif"]
        },

        "fonts": {
            "src": "fonts",
            "dest": "fonts",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "iconFont": {
            "src": "icons",
            "dest": "fonts",
            "sassDest": "generated",
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },

        "svgSprite": {
            "src": "sprites",
            "dest": "images",
            "extensions": ["svg"]
        },

        "download" : {
            "files" : [
                {
                    "src": "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/js/controls/OrbitControls.js",
                    "dest": "scripts/vendor/",
                    "requires": "import THREE from 'three.js';"
                },
                {
                    "src": "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/js/loaders/ColladaLoader.js",
                    "dest": "scripts/vendor/",
                    "requires": "import THREE from 'three.js';"
                }
            ]
        }
    }
}
